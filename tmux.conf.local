# setw -g window-status-activity-style "fg=colour147,bg=default,underscore,dim"
#
# #Active Window
# setw -g window-status-current-style "fg=colour156, bg=default"

# Statusbar settings

# amount of time for which status line messages and other indicators
# are displayed. time is in milliseconds.
set -g status-right "#[fg=#eeeeee]%H:%M"

# Colors based on Lucius theme
# status bar
set -g status-bg "#999999"
set -g status-fg "#eeeeee"

# highlight active window
setw -g window-status-current-bg "#eeeeee"
setw -g window-status-current-fg "#006699"

# highlight activity in status bar
setw -g window-status-activity-bg "#FFAF00"
setw -g window-status-activity-fg "#FFFFFF"

# pane border and colors
set -g pane-active-border-bg "#eeeeee"
set -g pane-active-border-fg "#006699"
set -g pane-border-bg "#eeeeee"
set -g pane-border-fg "#999999"

# fix nvim escape
set -sg escape-time 0
set -g -a terminal-overrides ",screen*:Ss=[%p1%d q:Se=[2 q"
